<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow file system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow file system bookmarks -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>
    
    <!-- Allow access to Downloads directory -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow access to Documents directory -->
    <key>com.apple.security.files.documents.read-write</key>
    <true/>
    
    <!-- Allow access to Desktop directory -->
    <key>com.apple.security.files.desktop.read-write</key>
    <true/>
    
    <!-- Allow access to Pictures directory -->
    <key>com.apple.security.files.pictures.read-write</key>
    <true/>
    
    <!-- Allow access to Movies directory -->
    <key>com.apple.security.files.movies.read-write</key>
    <true/>
    
    <!-- Allow access to Music directory -->
    <key>com.apple.security.files.music.read-write</key>
    <true/>
    
    <!-- Allow access to all files (read-only) -->
    <key>com.apple.security.files.all</key>
    <true/>
    
    <!-- Allow network access for P2P communication -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Allow mDNS/Bonjour for peer discovery -->
    <key>com.apple.security.network.client.bonjour</key>
    <true/>
    <key>com.apple.security.network.server.bonjour</key>
    <true/>
    
    <!-- Disable sandboxing for full file access (required for P2P file sharing) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
</dict>
</plist>